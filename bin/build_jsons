#!/usr/bin/env ruby

require "json"
require "pathname"
require "pathname-glob"
require_relative "../lib/deck"
require_relative "../lib/sets"

class BuildJsons
  def initialize
    @decks = []
  end

  def data_root
    @data_root ||= Pathname(__dir__) + "../data"
  end

  def add_deck(name, deck, set_code, set_name, deck_type)
    deck_data = {
      name: name,
      type: deck_type,
      set_name: set_name,
      set_code: set_code,
      cards: deck.card_data,
      sideboard: deck.sideboard_data,
    }
    @decks << deck_data
  end

  def save_jsons
    puts JSON.pretty_generate(@decks)
  end

  def validate_and_add_deck(path, deck)
    name = path.basename(".txt").to_s
    set_code = path.parent.basename.to_s
    deck_type = path.parent.parent.basename.to_s
    case deck_type
    when "pw"
      warn "#{path}: Expected 60 cards, not #{deck.size}" unless deck.size == 60 and deck.sideboard_size == 0
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Planeswalker Deck")
    when "cmd"
      warn "#{path}: Expected 99+1 cards, not #{deck.size}" unless deck.size == 99 and deck.sideboard_size == 1
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Commander Deck")
    when "intro"
      warn "#{path}: Expected 60 cards, not #{deck.size}" unless deck.size == 60 and deck.sideboard_size == 0
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Intro Pack")
    when "intro-41"
      warn "#{path}: Expected 41 cards, not #{deck.size}" unless deck.size == 41 and deck.sideboard_size == 0
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Intro Pack")
    when "theme"
      warn "#{path}: Expected 60 cards, not #{deck.size}" unless deck.size == 60 and deck.sideboard_size == 0
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Theme Deck")
    when "theme-40"
      warn "#{path}: Expected 40 cards, not #{deck.size}" unless deck.size == 40 and deck.sideboard_size == 0
      add_deck(name, deck, set_code, MagicSets.fetch(set_code), "Theme Deck")
    else
      raise
    end
  end

  def build
    data_root.glob("*/*/*.txt").each do |path|
      deck = Deck.new(path)
      validate_and_add_deck path, deck
    end
    @decks.sort_by!{|d| [d[:set_code], d[:name]]}
    save_jsons
  end
end

BuildJsons.new.build
